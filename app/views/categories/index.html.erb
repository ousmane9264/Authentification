

<div class="container">
<h1 class="text-center">Liste de mes articles</h1>
    <div class="row">
        <div class="col-lg-8 offset-2">
                <table class="table table-striped table-hover table-responsive">
                    <thead class="thead-dark">
                        <th>Titre </th>
                        <th>Contenu</th> 
                        <th> Actions</th> 
                    </thead>
                    <tbody>
                        <% @categories.each do |category| %>
                        <tr>
                            <td><%= category.name%></td>
                            <td><%= category.content%></td>
                            <td> 
                            <a href="<%= edit_category_path(category.id) %>" class="btn btn-link">
                            Editer <i class="fa fa-home"></i>
                            </a>
                             <a href="<%= category_path(category.id) %>" class="btn btn-link"
                             data-confirm="Voulez-vous supprimer" data-method="delete">Supprimer</a>
                            </td>
                          
                           
                        </tr>

                        <%end%>
                    </tbody>
                </table>
  
        </div>
    </div>
</div>



