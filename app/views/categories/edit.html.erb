<h1 class="text-center">Modifier votre article</h1>
<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-3">
            <div class="card">
                <%  if @category.invalid?  %>
                    <div class="alert alert-danger">
                         <% @category.errors.full_messages.each do |message| %>
                            <%= message %>
                        <%end%>
                    </div>
                <%end%>
                <div class="card-body"> 
                    <%= form_for @category do |f| %>
                    <p>
                      <b><%= f.label :Titre_Article, class: 'form-label'  %></b>  
                        <%= f.text_field :name, class: 'form-control' %>
                    </p>
                     <p>
                      <b><%= f.label :Date_de_creation, class: 'form-label'  %>
                      </b>  
                        <%= f.date_field :date, class: 'form-control' %>
                    </p>
                     <p>
                      <b>
                        <%= f.label :Image, class: 'form-label'  %>
                      </b> 
                        <%= f.file_field :image, class: 'form-control' %>
                    </p>

                    <p>
                      <b><%= f.label :Description, class: 'form-label'  %> </b>
                        <%= f.text_area :content, class: 'form-control', placeholder: 'decrivez votre article' %>
                    </p>
                    

   
                    <p>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </p>
                    <%end%>
                </div>
            </div>
        </div>
    </div>
</div>