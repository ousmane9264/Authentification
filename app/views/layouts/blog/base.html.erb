<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <a class="navbar-brand" href="/">Mon blog  </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav" style="margin-left: 700px">
              
              <%= link_to "Creer un article",new_category_path, class: 'nav-link active' %>
              <%= link_to "Mes articles",categories_path, class: 'nav-link active' %>                
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <%=  link_to "DÃ©connexion", destroy_user_session_path, method: :delete, class: 'nav-link active btn btn-danger' %>
            </div>
          </div>
        </nav>
      <div class="container">
          <div class="row">
              <div class="col-lg-6 offset-2">
                    <p class="notice"><%= notice %></p>
                    <p class="alert"><%= alert %></p>
                  <% if flash[:success]  %>
                    <div class="alert alert-success">
                      <%=  flash[:success] %>
                    </div> 
                  <% end %>
              </div>
          </div>
      </div>
    <%= yield %>
  </body>
</html>
